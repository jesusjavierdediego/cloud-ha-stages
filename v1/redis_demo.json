{
  "id": "redis",
  "mem": 1024,
  "cpus": 1.0,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "redis",
      "network": "BRIDGE",
      "portMappings": [ {
        "containerPort": 6379,
        "hostPort": 0,
        "servicePort": 10001,
        "protocol": "tcp",
        "name": "redis",
        "labels": { "VIP_0": "1.1.1.1:6379" }
      }],
      "parameters": [{ "key": "name", "value": "redis" }]
    }
  },
   "healthChecks": [
    {
      "protocol": "COMMAND",
      "command": {
        "value": "ping -c1 redis.marathon.mesos"
      },
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "ignoreHttp1xx": false
    }
  ],
  "labels":{
    "HAPROXY_GROUP":"external"
  }
}